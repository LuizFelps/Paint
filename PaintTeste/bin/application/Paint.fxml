<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.PaintController">
    <top>
        <MenuBar style="-fx-background-color: #ffe680;">
            <menus>
                <Menu mnemonicParsing="false" text="Arquivo">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#openImage" text="Abrir Imagem" />
                        <MenuItem mnemonicParsing="false" onAction="#saveImage" text="Salvar Imagem" />
                        <MenuItem mnemonicParsing="false" text="Sair" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Ajuda">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#openAboutWindow" text="Sobre" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <StackPane BorderPane.alignment="CENTER">
            <children>
                <ImageView fx:id="imageView" fitHeight="536.0" fitWidth="900.0" pickOnBounds="true" preserveRatio="true" />
                <Canvas fx:id="canvas" height="536.0" width="900.0" />
            </children>
        </StackPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="5.0" style="-fx-background-color: #ffe680;" BorderPane.alignment="CENTER">
            <children>
                <ColorPicker fx:id="colorPicker" />
                <Slider fx:id="lineThickness" majorTickUnit="40.0" min="10.0" minorTickCount="5" snapToTicks="true" value="10.0" />
                <TextField fx:id="textField" promptText="Insira o texto aqui!" />
                <Button fx:id="pencil" mnemonicParsing="false" onAction="#setPencilButtonAsActive" text="Lapis" />
                <Button fx:id="line" mnemonicParsing="false" onAction="#setLineButtonAsActive" text="Reta" />
                <Button fx:id="circle" mnemonicParsing="false" onAction="#setCircleButtonAsActive" text="Circulo" />
                <Button fx:id="rectangle" mnemonicParsing="false" onAction="#setRectangleButtonAsActive" text="Retangulo" />
                <Button fx:id="text" mnemonicParsing="false" onAction="#setTextButtonAsActive" text="Texto" />
                <Button fx:id="eraser" mnemonicParsing="false" onAction="#setEraserButtonAsActive" text="Borracha" />
                <Button fx:id="undo" mnemonicParsing="false" onAction="#setUndoButtonAsActive" text="Desfazer" />
                <Button fx:id="redo" mnemonicParsing="false" onAction="#setRedoButtonAsActive" text="Refazer" />
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
